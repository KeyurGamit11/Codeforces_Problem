#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int x,y,z;
    cin>>x>>y>>z;
    int a = sqrt((x*y)/z);
    int b = sqrt((x*z)/y);
    int c = sqrt((y*z)/x);
    //cout<<a<<b<<c<<endl;
    int ans = 4*(a+b+c);
    cout<<ans<<endl;
    return 0;
}
