#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int n;
    cin>>n;
    string s;
    cin>>s;
    int j=1;
    string str="";
    for(int i=0; i<n; i+=j){
    	str += s[i];
    	j++;
    }
    cout<<str<<endl;
    return 0;
}
