#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    cin>>t;
    while(t--){
    	string s;
    	cin>>s;
    	int n=s.size();
    	if(n%2==0 &&  s[0] != ')' && s[n-1] != '('){
    		cout<<"YES"<<"\n";
    	}
    	else{
    		cout<<"NO"<<"\n";
    	}
    }
    return 0;
}
