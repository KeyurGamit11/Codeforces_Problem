#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int n;
    cin>>n;
    int x=0;
    for(int i=0; i<n; i++){
    	string s;
    	cin>>s;
    	if(s[0]=='+' || s[2]=='+'){
    		x++;
    	}
    	else if(s[0]=='-' || s[2]=='-'){
    		x--;
    	}
    }
    cout<<x<<"\n";
    return 0;
}
