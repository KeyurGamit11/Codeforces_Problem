#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    cin>>t;
    while(t--){
    	int a,b,c;
    	cin>>a>>b>>c;
    	int first = a-1;
    	int second = abs(b-c)+abs(c-1);
    	//cout<<first<<" "<<second<<"\n";
    	if(first<second){
    		cout<<1<<"\n";
    	}
    	else if(second<first){
    		cout<<2<<"\n";
    	}
    	else{
    		cout<<3<<"\n";
    	}
    }
    return 0;
}
