#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    cin>>t;
    while(t--){
    	int p;
    	cin>>p;
    	if(p%2==0){
    		cout<<2<<" "<<p<<"\n";
    	}
    	else{
    		cout<<2<<" "<<p-1<<"\n";
    	}
    }
    return 0;
}
